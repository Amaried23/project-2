  $(document).ready(function(){
   
     var slider = document.getElementById('guest-slider');
    noUiSlider.create(slider, {
     start: [4, 15],
     connect: true,
     step: 1,
     orientation: 'horizontal', // 'horizontal' or 'vertical'
     range: {
       'min': 0,
       'max': 20
     },
     format: wNumb({
       decimals: 0
     })
